# نظام الموارد البشرية الذكي - Smart HR System
# Environment Variables Configuration

# اللغة الافتراضية - Default Language
DEFAULT_LANGUAGE=ar

# إعدادات الخادم - Server Settings
HOST=0.0.0.0
PORT=8000
RELOAD=true

# إعدادات الأمان - Security Settings
MAX_FILE_SIZE_MB=50
SECRET_KEY=your-secret-key-here-change-in-production

# إعدادات قاعدة البيانات - Database Settings
# SQL Server Configuration
SQL_SERVER_HOST=localhost
SQL_SERVER_PORT=1433
SQL_SERVER_DATABASE=HR_Database
SQL_SERVER_USERNAME=sa
SQL_SERVER_PASSWORD=YourStrongPassword123!
SQL_SERVER_DRIVER=ODBC Driver 17 for SQL Server
SQL_SERVER_TIMEOUT=30
DEFAULT_EMPLOYEE_TABLE=Employees

# PostgreSQL (للاستخدام المستقبلي - For future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/hrdb

# إعدادات السجلات - Logging Settings
LOG_LEVEL=INFO
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

# إعدادات CORS - CORS Settings
# في الإنتاج، حدد النطاقات المسموحة - In production, specify allowed origins
CORS_ORIGINS=*

# إعدادات النموذج - Model Settings
MODEL_TYPE=random_forest
USE_CROSS_VALIDATION=true
TEST_SIZE=0.2

# إعدادات البريد الإلكتروني - Email Settings (للاستخدام المستقبلي)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-password
# SMTP_FROM=noreply@yourcompany.com

# إعدادات التخزين - Storage Settings (للاستخدام المستقبلي)
# S3_BUCKET=hr-system-bucket
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key

