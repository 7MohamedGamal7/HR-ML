# نظام الموارد البشرية الذكي - Smart HR System
# Environment Variables Configuration

# اللغة الافتراضية - Default Language
DEFAULT_LANGUAGE=ar

# إعدادات الخادم - Server Settings
HOST=0.0.0.0
PORT=8000
RELOAD=true

# إعدادات الأمان - Security Settings
MAX_FILE_SIZE_MB=50
SECRET_KEY=your-secret-key-here-change-in-production

# إعدادات قاعدة البيانات - Database Settings
# SQL Server Configuration

# ⚠️ مهم جداً - VERY IMPORTANT ⚠️
# إذا كان SQL Server على نفس الجهاز (Local):
# If SQL Server is on the same machine (Local):
#   - على Windows/Mac: استخدم host.docker.internal
#   - On Windows/Mac: Use host.docker.internal
#   - ❌ لا تستخدم localhost أو 127.0.0.1
#   - ❌ Don't use localhost or 127.0.0.1
#
# إذا كان SQL Server على جهاز آخر (Remote):
# If SQL Server is on a different machine (Remote):
#   - استخدم عنوان IP (مثال: 192.168.1.50)
#   - Use IP address (example: 192.168.1.50)

# السيناريو 1: SQL Server محلي على Windows/Mac - Local SQL Server on Windows/Mac
SQL_SERVER_HOST=host.docker.internal

# السيناريو 2: SQL Server بعيد - Remote SQL Server
# SQL_SERVER_HOST=192.168.1.50

# السيناريو 3: SQL Server Express (Named Instance)
# SQL_SERVER_HOST=host.docker.internal\\SQLEXPRESS

# المنفذ - Port (الافتراضي 1433 - Default 1433)
SQL_SERVER_PORT=1433

# اسم قاعدة البيانات - Database Name
SQL_SERVER_DATABASE=HR_Database

# اسم المستخدم - Username
# تأكد من استخدام SQL Server Authentication وليس Windows Authentication
# Make sure to use SQL Server Authentication, not Windows Authentication
SQL_SERVER_USERNAME=sa

# كلمة المرور - Password
# ⚠️ لا تترك هذا فارغاً - Don't leave this empty
SQL_SERVER_PASSWORD=YourStrongPassword123!

# ODBC Driver (لا تغيّر هذا - Don't change this)
SQL_SERVER_DRIVER=ODBC Driver 17 for SQL Server

# مهلة الاتصال بالثواني - Connection Timeout in seconds
# إذا كان الاتصال بطيئاً، زد هذه القيمة إلى 60 أو أكثر
# If connection is slow, increase this to 60 or more
SQL_SERVER_TIMEOUT=60

# جدول الموظفين الافتراضي - Default Employee Table
DEFAULT_EMPLOYEE_TABLE=Employees

# PostgreSQL (للاستخدام المستقبلي - For future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/hrdb

# إعدادات السجلات - Logging Settings
LOG_LEVEL=INFO
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

# إعدادات CORS - CORS Settings
# في الإنتاج، حدد النطاقات المسموحة - In production, specify allowed origins
CORS_ORIGINS=*

# إعدادات النموذج - Model Settings
MODEL_TYPE=random_forest
USE_CROSS_VALIDATION=true
TEST_SIZE=0.2

# إعدادات البريد الإلكتروني - Email Settings (للاستخدام المستقبلي)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-password
# SMTP_FROM=noreply@yourcompany.com

# إعدادات التخزين - Storage Settings (للاستخدام المستقبلي)
# S3_BUCKET=hr-system-bucket
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key

